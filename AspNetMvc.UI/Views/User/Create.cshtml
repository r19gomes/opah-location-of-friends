@model AspNetMvc.UI.Models.Security.UserViewModel

@{
    ViewBag.Title = "Usuario";
}

@using (Html.BeginForm("Create", "User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.HiddenFor(model => model.User.UsuarioId, new { @Id = "usuarioId" })
    @Html.HiddenFor(model => model.User.Nome, new { @Id = "nome" })
    @Html.HiddenFor(model => model.User.Apelido, new { @Id = "apelido" })
    @Html.HiddenFor(model => model.User.Email, new { @Id = "email" })

    <section>

        <h2>Usuário</h2>

        <div class="row form-group">
            <div class="col-md-6">
                <label for="usuarioId">Identificador</label>
                <input type="text" class="form-control" id="usuarioUsuarioId"
                       aria-describedby="usuarioIdHelp" placeholder="" disabled />
            </div>
            <div class="col-md-6">
                <label for="apelido">Apelido</label>
                <input type="text" class="form-control" id="usuarioApelido"
                       aria-describedby="apelidoHelp" placeholder="Entre com o apelido" />
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-6">
                <label for="usuarioNome">Nome</label>
                <input type="text" class="form-control" id="nome"
                       aria-describedby="nomeHelp" placeholder="Entre com o nome" />
            </div>
            <div class="col-md-6">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="usuarioEmail"
                       aria-describedby="emailHelp" placeholder="Entre com o e-mail">
                <small id="emailHelp" class="form-text text-muted">Nós nunca vamos compartilhar seu e-mail com mais ninguém..</small>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-6">
                <label for="login">Login:</label>
                <input type="text" class="form-control" id="usuarioLogin"
                       aria-describedby="loginHelp" placeholder="Entre com o login de acesso" />
            </div>
            <div class="col-md-6">
                <label for="senha">Senha:</label>
                <input type="password" class="form-control" id="usuarioSenha"
                       aria-describedby="senhaHelp" placeholder="Entre com a senha de acesso">
            </div>
        </div>

        <div class="row form-group">
            <br />
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary" onclick="beforeSubmit()">
                    <span class="glyphicon glyphicon-floppy-saved"></span> Salvar
                </button>
                <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Index", "User")'">
                    <span class="glyphicon glyphicon-circle-arrow-left"></span> Voltar
                </button>
            </div>
        </div>

    </section>
}

@section Scripts {
    <script type="text/javascript">

        /*
        ** Inicializa toda a página parcial ou view Hotel.
        */
        $(document).ready(function () {

            let $apelido = $("#apelido");
            if ($apelido != null) {
                $apelido.focus();
            }

        });

        var beforeSubmit = function () {

            let isValid = true;
            let message = '';

            let $usuarioApelido = $("#usuarioApelido");
            $("#apelido").val($usuarioApelido.val());

            let $usuarioNome = $("#usuarioNome");
            $("#nome").val($usuarioNome.val());

            let $usuarioEmail = $("#usuarioEmail");
            $("#email").val($usuarioEmail.val());

            let $usuarioLogin = $("#usuarioLogin");
            $("#login").val($usuarioLogin.val());

            let $usuarioSenha = $("#usuarioSenha");
            $("#senha").val($usuarioSenha.val());
        }

    </script>
}